    ComboBoxIncoming: TComboBox;
    DBGridIncoming: TDBGrid;
    ButtonIncoming: TButton;
    ButtonOutGoing: TButton;
    GroupBox3: TGroupBox;
    DBGridOutGoingFile: TDBGrid;
    GroupBox4: TGroupBox;
    DBGrid3: TDBGrid;
